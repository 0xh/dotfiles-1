alias mkycm='cp ~/dotfiles/cpp/ycm_extra_conf.py .ycm_extra_conf.py'
(( $+commands[tac]      )) || alias tac='tail -r'
(( $+commands[nvim]     )) && alias vim=`which nvim`
if (( $+commands[exa] )); then
    alias ls='exa --time-style long-iso'
    alias tree='ls -T'
    alias ll='ls -lbhg --git'
    alias lg='ll -G'    # List by grid
    alias llg='ll -G'
    alias la='ll -a'
    alias lag='llg -a'
    alias ldot='ll -d .*'
    alias lss='ll -s size'
    alias lst='ll -s accessed'
fi
alias vv='vim $(fzf)'
