#!/usr/bin/env bash
usage() {
    echo "Usage: $(basename "$0") <user/repo>" >&2
}

[[ "$#" -ne 1 ]] && usage && exit 1
repo="$1"

curl -sS "https://api.github.com/repos/$repo/releases" |
    grep browser_download_url |
    cut -d'"' -f4 |
    fzf -m |
    xargs -i{} curl -LO --proto-redir -all,https {}
